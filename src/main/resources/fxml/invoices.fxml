<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.chalwk.controller.InvoicesController" spacing="15">
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Invoices" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addInvoiceBtn" text="Add Invoice" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="invoicesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Invoice Number" prefWidth="150"/>
            <TableColumn text="Total Amount" prefWidth="120"/>
            <TableColumn text="Balance Owing" prefWidth="120"/>
            <TableColumn text="Payments" prefWidth="100"/>
            <TableColumn text="Actions" prefWidth="200"/>
        </columns>
    </TableView>
</VBox>