<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.chalwk.controller.InvoicesController" spacing="15">
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Invoices" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addInvoiceBtn" text="Add Invoice" styleClass="primary-button"/>
    </HBox>

    <TableView fx:id="invoicesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Invoice Number"/>
            <TableColumn text="Total Amount"/>
            <TableColumn text="Balance Owing"/>
            <TableColumn text="Payments"/>
            <TableColumn text="Actions"/>
        </columns>
    </TableView>
</VBox>