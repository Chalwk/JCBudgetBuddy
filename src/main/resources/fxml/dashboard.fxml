<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="com.chalwk.controller.DashboardController"
          hgap="20" vgap="20">
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints prefHeight="30" valignment="BOTTOM"/>
    </rowConstraints>

    <!-- Weekly Income Card -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          GridPane.columnIndex="0" GridPane.rowIndex="0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Weekly Income" style="-fx-font-weight: bold; -fx-text-fill: #3498db; -fx-font-size: 16px;"/>
            <Label text="After Tax" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="editIncomeBtn" text="Edit"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
        <Label fx:id="weeklyIncomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;"/>
    </VBox>

    <!-- Weekly Expenses Card -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          GridPane.columnIndex="1" GridPane.rowIndex="0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Weekly Expenses" style="-fx-font-weight: bold; -fx-text-fill: #3498db; -fx-font-size: 16px;"/>
            <Label text="Total" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
        </HBox>
        <Label fx:id="weeklyExpensesLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
        <Label text="Sum of all weekly payments" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
    </VBox>

    <!-- Remaining Balance Card -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          GridPane.columnIndex="2" GridPane.rowIndex="0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Remaining Balance"
                   style="-fx-font-weight: bold; -fx-text-fill: #3498db; -fx-font-size: 16px;"/>
            <Label text="Weekly" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
        </HBox>
        <Label fx:id="remainingBalanceLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Treats, activities, birthdays, etc." style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
    </VBox>

    <!-- Monthly Average Card -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          GridPane.columnIndex="3" GridPane.rowIndex="0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Monthly Average" style="-fx-font-weight: bold; -fx-text-fill: #3498db; -fx-font-size: 16px;"/>
            <Label text="From Weekly" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
        </HBox>
        <Label fx:id="monthlyAverageLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Weekly expenses Ã— 4 weeks" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
    </VBox>
</GridPane>