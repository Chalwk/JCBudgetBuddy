<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.chalwk.controller.IncomeController" spacing="15">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Income Streams" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addIncomeStreamBtn" text="Add Income Stream" styleClass="primary-button"/>
    </HBox>

    <!-- Income Streams Section -->
    <VBox spacing="10">
        <TableView fx:id="incomeStreamsTable" VBox.vgrow="ALWAYS" prefHeight="550">
            <columns>
                <TableColumn text="Name"/>
                <TableColumn text="Amount"/>
                <TableColumn text="Frequency"/>
                <TableColumn text="Start Date"/>
                <TableColumn text="End Date"/>
                <TableColumn text="Status"/>
                <TableColumn text="Notes"/>
                <TableColumn text="Actions"/>
            </columns>
        </TableView>
    </VBox>
</VBox>